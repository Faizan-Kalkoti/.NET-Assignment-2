@model List<CRUD_API.Models.BCMatch>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:2em;">

    <div style="padding:2em; text-align:center; font-size:2em;">For Series: <b>@ViewBag.CurrentBCSery </b> </div>


    <div class="row" style="padding:1em; justify-content:center; padding:1em; margin:0px;">
        <div style="padding:2em; padding-top:0.5em; border: 1px solid black; border-radius:0.8em;">

            <h4 style="text-align:center;">We have Matches</h4> <hr style="border:1px solid grey;" />


            @foreach (var item in Model)
            {
                <div class="row" style="justify-content:center; padding:0.2em;   margin:0px;">
                    <div class="col-lg-1" style="border-right:1px solid black;">
                        Id: @item.Id
                    </div>
                    <div class="col-lg-3" style="border-right:1px solid black;">
                        Opponent: @item.Opponent
                    </div>
                    <div class="col-lg-4" style="border-right:1px solid black;">
                        Match Date: @item.MatchDate
                    </div>
                    <div class="col-lg-4">
                        <a class="btn btn-primary"
                           href="@Url.Action("UpdateMatch", "BCSeries", new { id=item.Id})">
                            Update
                        </a>
                        &nbsp;
                        <a class="btn btn-danger"
                           href="@Url.Action("DeleteMatch", "BCSeries", new { id=item.Id})">Delete</a>
                    </div>
                </div>
                <hr style="border:1px solid grey;" />
            }

        </div>
    </div>

    <br />
    <div style="text-align:center">
        <a class="btn btn-success" href="@Url.Action("CreateMatch", "BCSeries", new {Id=ViewBag.CurrentBCSeryID})">Create Match</a>
        &nbsp;
        <a class="btn btn-primary" href="@Url.Action("Index", "BCSeries", new { area = "" })" >Go back</a>
    </div>

</div>

