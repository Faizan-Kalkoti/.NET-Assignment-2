@model CRUD_API.Models.BCMatch

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding:1em;"></div>
<div class="row">
    <div class="col-lg-3">
        <div style="text-align:center;">
                <h2 style="text-align:center;">UpdateMatch</h2>
        </div>
    </div>
    <div class="col-lg-9">
    </div>
</div>


@using (Html.BeginForm("UpdateMatch", "BCSeries"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.SerieId)
            @Html.EditorFor(model => model.SerieId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SerieId, "", new { @class = "text-danger" })
        </div>


        <!-- Add a hidden field for SerieId -->

        <div class="form-group">
            @Html.LabelFor(model => model.Opponent)
            @Html.EditorFor(model => model.Opponent, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Opponent, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatchDate)
            @Html.EditorFor(model => model.MatchDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatchDate, "", new { @class = "text-danger" })
        </div>



        <div class="form-group">
            <div class="row">
                <div class="col-lg-3">
                    <div style="text-align:center;">
                        <input type="submit" value="Save" class="btn btn-primary" /><br /><br />
                        <div class="btn btn-default">
                            @Html.ActionLink("Back to List", "Index", null, new { style = "text-decoration: none;" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                </div>
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

