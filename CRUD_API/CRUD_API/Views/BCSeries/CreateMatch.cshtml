@model CRUD_API.Models.BCMatch

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create BCMatch</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.SerieId, new { Value = ViewBag.SerieId }) <!-- Add a hidden field for SerieId -->

    <div class="form-group">
        @Html.LabelFor(model => model.Opponent)
        @Html.EditorFor(model => model.Opponent, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Opponent, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatchDate)
        @Html.EditorFor(model => model.MatchDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.MatchDate, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}